<div class="row">
	<div class="span12">
		<h1><%= controller.action_name.capitalize %> Kibera Child</h1>
		<%= simple_form_for @kibera_child, :html => { :class => 'form-horizontal' } do |f| %>
			<div class="tabbable">
				<ul class="nav nav-tabs">
					<li class="active"><a href="#general" data-toggle="tab">General Info</a></li>
					<li><a href="#assessment" data-toggle="tab">Assessment Info</a></li>
					<li><a href="#physical" data-toggle="tab">Physical Exam</a></li>
				</ul>
			</div>
			<div class="tab-content">
				<div class="tab-pane active" id="general">
				    <fieldset>
						<div class="row">
							<div class="span12">
						        <% if @kibera_child.image? %>
						            <div class="control-group file optional">
						                <%= f.label :image_url, 'Child Photo', :class => 'file optional control-label' %>
						                <div class="controls">
						                    <ul class="thumbnails">
						                        <li class="span1">
						                            <%= image_tag f.input :image_url, :class => 'thumbnail' %>
						                        </li>
						                    </ul>
						                </div>
						            </div>
						            <%= f.input :image, :label => false, :as => :file %>
						            <%= f.hidden_field :image_cache %>
						        <% else %>
						            <%= f.input :image, :label => 'Child Photo', :as => :file %>
						            <%= f.hidden_field :image_cache %>
						        <% end %>
							</div>
						</div>
        
						<div class="row">
							<div class="span4">
					        	<%= f.input :first_name, :label => "First Name" %>
							</div>
							<div class="span4">
					        	<%= f.input :last_name, :error => false, :label => "Last Name" %>
							</div>
							<div class="span3">
				        		<%= f.input :gender, :as => :radio_buttons, :collection => ["Male", "Female"] %>
							</div>
						</div>
        				
						<div class="row">
							<div class="span4">
        						<%= f.input :birth_date, :as => :date_picker, :label => "Date of Birth", :order => [:month, :day, :year], :start_year => Date.today.year - 40, :end_year => Date.today.year %>
							</div>
							<div class="span4">
				        <%= f.input :grade, :label => "Grade", :collection => ['Pre-Unit', '1st Grade', '2nd Grade', '3rd Grade', '4th Grade', '5th Grade'] %>
							</div>
						</div>
        
						<div class="row">
							<div class="span4">
					        	<%= f.input :orphan %>
							</div>
							<div class="span4">
					        	<%= f.input :name_of_parent_or_guardian, :label => "Parent/Guardian" %>
							</div>
						</div>
    
				    </fieldset>
				</div>
				
				<div class="tab-pane" id="assessment">
				    <fieldset>
				        <%= f.input :height_in_cm, :label => "Height (cm)" %>
				        <%= f.input :weight_in_kg, :label => "Weight (kg)" %>
				        <%= f.input :uam_in_cm, :label => "UAM (cm)" %>
				        <%= f.input :assessment_temperature_in_fahrenheit, :label => "Temperature (&deg;F)" %>
				        <%= f.input :blood_pressure_systolic, :label => "Systolic Blood Pressure" %>
				        <%= f.input :blood_pressure_diastolic, :label => "Diastolic Blood Pressure" %>
				        <%= f.input :has_hearing_complaints %>
				        <%= f.input :vision_right %>
				        <%= f.input :vision_left %>
				        <%= f.input :has_cavities %>
				        <%= f.input :has_teeth_missing %>
				        <%= f.input :has_healthy_tongue %>
				        <%= f.input :has_red_patches %>
				        <%= f.input :has_evidence_of_yeast %>
				        <%= f.input :has_big_belly %>
				        <%= f.input :has_swollen_feet %>
				        <%= f.input :has_thin_arms_or_legs %>
				        <%= f.input :has_hair_loss %>
				        <%= f.input :has_mouth_sores %>
				        <%= f.input :has_scalp_fungus %>
				        <%= f.input :has_dry_skin %>
				        <%= f.input :has_rashes %>
				        <%= f.input :rash_location %>
				        <%= f.input :has_had_tb %>
				        <%= f.input :tb_date, :as => :date, :order => [:month, :day, :year] %>
				        <%= f.input :has_tb_treatment_completed %>
				        <%= f.input :has_had_typhoid %>
				        <%= f.input :typhoid_date, :as => :date, :order => [:month, :day, :year] %>
				        <%= f.input :has_had_malaria %>
				        <%= f.input :malaria_date, :as => :date, :order => [:month, :day, :year] %>
				        <%= f.input :has_menstruated %>
				        <%= f.input :has_received_menstrual_products %>
				        <%= f.input :menstrual_products_distribution_date, :as => :date, :order => [:month, :day, :year] %>
				        <%= f.input :has_menstrual_product_access %>
				        <%= f.input :has_toothbrush %>
				        <%= f.input :has_toothpaste %>
				        <%= f.input :has_soap %>
				        <%= f.input :hygenall_products_distribution_date, :as => :date, :order => [:month, :day, :year] %>
				        <%= f.input :sleeping_location, :label => "Sleep Location", :collection => ['Bed', 'Floor'] %>
				        <%= f.input :sleeps_with_mosquito_net, :label => "Sleeps w/ Mosquito Net?" %>
				        <%= f.input :has_bible %>
				        <%= f.input :is_christian %>
				        <%= f.input :is_attending_church %>
				        <%= f.input :church_location %>
				        <%= f.input :favorite_color %>
				        <%= f.input :meals_eaten_per_day %>
				        <%= f.input :has_food_available_at_home %>
				        <%= f.input :is_food_prepared_with_charcoal %>
				        <%= f.input :has_windows_in_home %>
				        <%= f.input :has_school_uniform %>
				        <%= f.input :is_school_uniform_in_good_condition %>
				        <%= f.input :state_of_school_uniform %>
				        <%= f.input :dress_size %>
				        <%= f.input :shirt_size %>
				        <%= f.input :shorts_size %>
				        <%= f.input :has_shoes %>
				        <%= f.input :is_shoes_in_good_condition %>
				        <%= f.input :shoe_size %>
				        <%= f.input :additional_comments, :as => :text %>
				    </fieldset>
				</div>
    			<div class="tab-pane" id="physical">
				    <fieldset>
				        <%= f.input :physical_examination_date, :as => :date, :order => [:month, :day, :year] %>
				        <%= f.input :physical_examination_temperature_in_celsius, :label => "Temperature (&deg;C)" %>
				        <%= f.input :health_notes, :as => :text, :label => "Signs of Poor Health" %>
				        <%= f.input :observations, :as => :text, :label => "Comments" %>
						<%= f.input :recommendations, :as => :text, :label => "Recommendations" %>
				        <%= f.input :is_antibiotics_needed %>
				        <%= f.input :is_antihistamines_needed %>
				        <%= f.input :is_antifungals_needed %>
				        <%= f.input :is_vitamins_needed %>
				        <%= f.input :is_ear_syringing_needed %>
				        <%= f.input :is_deworming_needed %>
				        <%= f.input :is_stool_sample_needed %>
				        <%= f.input :is_dental_attention_needed %>
				        <%= f.input :is_opthamologist_needed %>
				        <%= f.input :is_pain_killers_needed %>
				        <%= f.input :is_blood_test_needed %>
				        <%= f.input :is_washing_needed %>
				        <%= f.input :has_umbilical_hernia %>
				        <%= f.input :additional_physical_examination_notes, :as => :text, :label => "Other Notes" %>
				    </fieldset>
				</div>
			</div>

		    <div class="form-actions">
		      <%= f.submit 'Save', :class => 'btn btn-primary' %>
		      <%= link_to 'Cancel', kibera_children_path, :class => 'btn' %>
		    </div>
  
		<% end %>

	</div>
</div>