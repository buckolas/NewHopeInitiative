          <div class="span2">

               <%= f.input :is_blood_test_needed, :label => "Blood Test Needed?" %>
              </div>
              <div class="span2">

                  <%= f.input :is_pain_killers_needed, :label => "Pain Killers Recommended?" %>
              </div>
              <div class="span2">

               <%= f.input :is_washing_needed, :label => "Washing Recommended?" %>
              </div>
          </div>
              <div class="row">
                  <div class="span2">

                       <%= f.input :has_umbilical_hernia, :label => "Has Umbilical Hernia?" %>
                  </div>
              </div>
          </div>
          <div class="tab-pane" id="doctor-notes">

      <div class="row">
           <div class="span4">
                  <%= f.input :health_notes, :as => :text, :label => "Signs of Poor Health", :input_html => { :rows => 10 } %>
           </div>
           <div class="span4">
                  <%= f.input :observations, :as => :text, :label => "Comments", :input_html => { :rows => 10 } %>

              </div>
</div>
       <div class="row">
               <div class="span4">
                  <%= f.input :recommendations, :as => :text, :label => "Recommendations", :input_html => { :rows => 10 } %>
              </div>
           <div class="span4">
               <%= f.input :additional_physical_examination_notes, :as => :text, :label => "Other Notes", :input_html => { :rows => 10 } %>

           </div>
        </div>
    </div>
      </div>
      </div>
      </div>
  </fieldset>
</div>

</div>

  <div class="form-actions">
    <%= f.submit 'Save', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', :back, :class => 'btn' %>
  </div>
  
<% end %>

</div>
</div>