          <div class="span2">
               <%= f.input :is_deworming_needed, :label => "Deworming Needed?" %>
              </div>
           <div class="span2">
				<%= f.input :is_stool_sample_needed, :label => "Stool Sample Needed?" %>
              </div>
              <div class="span2">
                  <%= f.input :is_dental_attention_needed, :label => "Dental Attention Needed?" %>
              </div>
          </div>
          <div class="row">
           <div class="span2">

               <%= f.input :is_opthamologist_needed, :label => "Opthamologist Attention Needed?" %>
