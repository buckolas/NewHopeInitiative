<%= simple_form_for @kibera_child, :html => { :class => 'form-horizontal' } do |f| %>
    <fieldset>
          <legend><%= controller.action_name.capitalize %> Kibera Child</legend>
        
        <% if f.input :image? %>
            <div class="control-group file optional">
                <%= f.label :image_url, 'Child Photo', :class => 'file optional control-label' %>
                <div class="controls">
                    <ul class="thumbnails">
                        <li class="span1">
                            <%= image_tag f.input :image_url, :class => 'thumbnail' %>
                        </li>
                    </ul>
                </div>
            </div>
            <%= f.input :image, :label => false, :as => :file %>
            <%= f.hidden_field :image_cache %>
        <% else %>
            <%= f.input :image, :label => 'Child Photo', :as => :file %>
            <%= f.hidden_field :image_cache %>
        <% end %>
        
        <%= f.input :first_name, :label => "First Name" %>
        <%= f.input :last_name, :label => "Last Name" %>
        
        <%= f.input :gender, :as => :radio_buttons, :collection => ["Male", "Female"] %>
        
        <%= f.input :birth_date, :as => :date, :order => [:month, :day, :year] %>
        <%= f.input :age, :collection => 0..18 %>
        <%= f.input :class_in_school, :label => "Grade", :collection => ['Pre-Unit', '1st Grade', '2nd Grade', '3rd Grade', '4th Grade'] %>
        
        <%= f.input :orphan %>
        <%= f.input :name_of_parent_or_guardian %>
    
