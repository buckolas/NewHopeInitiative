<div class="row">
	<div class="span12">
		<h1><%= controller.action_name.capitalize %> Kibera Child</h1>
		<%= simple_form_for @kibera_child, :html => { :class => 'form-horizontal' } do |f| %>
			<div class="tabbable">
				<ul class="nav nav-tabs">
					<li class="active"><a href="#general" data-toggle="tab">General Info</a></li>
					<li><a href="#assessment" data-toggle="tab">Assessment Info</a></li>
					<li><a href="#physical" data-toggle="tab">Physical Exam</a></li>
				</ul>
			</div>
			<div class="tab-content">
				<div class="tab-pane active" id="general">
  					<fieldset>
        
						<div class="row">
							<div class="span4">
								<%= f.input :first_name, :label => "First Name" %>
							</div>
							<div class="span4">
								<%= f.input :last_name, :error => false, :label => "Last Name" %>
							</div>
							<div class="span3">
								<%= f.input :gender, :as => :radio_buttons, :collection => ['Male', 'Female'], :include_blank => false %>
							</div>
						</div>
       
						<div class="row">
							<div class="span4">
								<%= f.input :birth_date, :as => :date_picker, :label => "Date of Birth" %>
							</div>
							<div class="span4">
								<%= f.input :grade, :label => "Grade", :collection => ['Pre-Unit', '1', '2', '3', '4', '5', '6', '7', '8'], :include_blank => false %>
							</div>
						</div>
        
						<div class="row">
							<div class="span4">
								<%= f.input :orphan, :label => "Orphan", :collection => ['Not Applicable', 'Single', 'Double'], :include_blank => false %>
							</div>
							<div class="span4">
								<%= f.input :name_of_parent_or_guardian, :label => "Parent/Guardian" %>
							</div>
						</div>
    
					</fieldset>
			</div>
			<div class="tab-pane" id="assessment">
  <fieldset>
       <div class="row">
               <div class="tabbable tabs-left">
<div class="span2">
                       <ul class="nav nav-pills nav-stacked">
                           <li class="active"><a href="#assessment-info" data-toggle="tab">Assessment Info</a></li>
                           <li><a href="#physical-screening" data-toggle="tab">Physical Screening</a></li>

                           <li><a href="#malnutrition-signs" data-toggle="tab">Signs of Malnutrition</a></li>
                           <li><a href="#disease-history" data-toggle="tab">Disease History</a></li>

                           <li><a href="#personal-hygiene" data-toggle="tab">Personal Hygiene</a></li>
                           <li><a href="#female-hygiene" data-toggle="tab">Feminine Hygiene</a></li>
                           <li><a href="#living-conditions" data-toggle="tab">Living Conditions</a></li>
                           <li><a href="#faith" data-toggle="tab">Faith</a></li>
                           <li><a href="#clothing" data-toggle="tab">Clothing</a></li>
                           <li><a href="#misc" data-toggle="tab">Miscellaneous Info</a></li>
                       </ul>
                   </div>
                   <div class="span10">
                       <div class="tab-content">
                               <div class="tab-pane active" id="assessment-info">

                               <div class="row">
                                   <div class="span4">
                                       <%= f.input :assessment_documentation_date, :as => :date_picker, :label => "Assessment Date" %>
                                   </div>
                               </div>
                           </div>
                           <div class="tab-pane" id="physical-screening">

<h3>Body Measurements</h3>
<div class="row">
<div class="span4">
        <%= f.input :height_in_cm, :label => "Height (cm)" %>
</div>
<div class="span4">
        <%= f.input :weight_in_kg, :label => "Weight (kg)" %>
</div>
</div>
<div class="row">
<div class="span4">
        <%= f.input :uam_in_cm, :label => "UAM (cm)" %>
</div>
</div>
<h3>Temperature</h3>
<div class="row">
<div class="span4">
        <%= f.input :assessment_temperature_in_fahrenheit, :label => "Temperature (&deg;F)" %>
</div>
</div>
<h3>Vitals</h3>
<div class="row">
<div class="span4">
       <%= f.input :blood_pressure_systolic, :label => "Systolic Blood Pressure" %>
</div>
<div class="span4">
<%= f.input :blood_pressure_diastolic, :label => "Diastolic Blood Pressure" %>
</div>
</div>
<h3>Vision</h3>
<div class="row">
<div class="span4">
<%= f.input :vision_right, :label => "Right Eye" %>
</div>
<div class="span4">
<%= f.input :vision_left, :label => "Left Eye" %>

</div>
</div>
<h3>Hearing</h3>
                               <div class="row">
                                   <div class="span2">
                                       <%= f.input :has_hearing_complaints, :label => "Hearing Complaints?" %>
                                   </div>
                               </div>
<h3>Teeth</h3>
                               <div class="row">
<div class="span2">
                                    <%= f.input :has_cavities, :label => "Cavities?" %>
                                </div>
                                   <div class="span2">
                                    <%= f.input :has_teeth_missing, :label => "Missing Teeth?" %>
                                   </div>
                               </div>
<h3>Tongue</h3>
                               <div class="row">
<div class="span2">
                                    <%= f.input :has_healthy_tongue, :label => "Healthy Tongue?" %>
                                   </div>
                                   <div class="span2">
                                    <%= f.input :has_red_patches, :label => "Red Patches?" %>
                                   </div>
                                   <div class="span2">
                                    <%= f.input :has_evidence_of_yeast, :label => "Evidence of Yeast?" %>
                                   </div>
                               </div>
                           </div>
                           <div class="tab-pane" id="malnutrition-signs">
                                   <h3>Body</h3>
                               <div class="row">
                                   <div class="span2">
                                    <%= f.input :has_big_belly, :label => "Big Belly?" %>
                                   </div>
                                   <div class="span2">
                                    <%= f.input :has_swollen_feet, :label => "Swollen Feet?" %>
                                   </div>
                                   <div class="span2">
                                    <%= f.input :has_thin_arms_or_legs, :label => "Thin Arms/Legs?" %>
                                   </div>
                                   <div class="span2">
                                    <%= f.input :has_mouth_sores, :label => "Mouth Sores?" %>
                                   </div>
                               </div>
                               <h3>Hair</h3>
                               <div class="row">
                                       <div class="span2">
                                       <%= f.input :has_hair_loss, :label => "Hair Loss?" %>
                                   </div>
                                   <div class="span2">
                                    <%= f.input :has_scalp_fungus, :label => "Scalp Fungus?" %>
                                   </div>
                               </div>
                               <h3>Skin</h3>
                               <div class="row">
                                       <div class="span2">
                                    <%= f.input :has_dry_skin, :label => "Dry Skin?" %>
                                   </div>
                                   <div class="span2">
                                       <%= f.input :has_rashes, :label => "Rashes?" %>
                                   </div>
                                   <div class="span4">
                                    <%= f.input :rash_location, :label => "Rash Location" %>
                                   </div>
                               </div>
                           </div>
                           <div class="tab-pane" id="disease-history">
                               <h3>Tuberculosis</h3>
                               <div class="row">
                                   <div class="span2">
                                       <%= f.input :has_had_tb, :label => "Had TB?" %>
                                   </div>
                                   <div class="span2">
                                       <%= f.input :has_tb_treatment_completed, :label => "TB Treatment Completed?" %>
                                   </div>
                                   <div class="span4">
                                       <%= f.input :tb_date, :as => :date_picker, :label => "TB Date" %>
                                   </div>
                               </div>
                               <h3>Typhoid</h3>
                               <div class="row">
                                   <div class="span2">
                                       <%= f.input :has_had_typhoid, :label => "Had Typhoid?" %>
                                   </div>
                                   <div class="offset2 span4">
                                       <%= f.input :typhoid_date, :as => :date_picker, :label => "Typhoid Date" %>
                                   </div>
                               </div>
                               <h3>Malaria</h3>
                               <div class="row">
                                   <div class="span2">
                                       <%= f.input :has_had_malaria, :label => "Had Malaria?" %>
                                   </div>
                                   <div class="offset2 span4">
                                       <%= f.input :malaria_date, :as => :date_picker, :label => "Malaria Date" %>
                                   </div>
                               </div>
                           </div>
                           <div class="tab-pane" id="personal-hygiene">
                               <div class="row">
                                   <div class="span2">
                                       <%= f.input :has_toothbrush, :label => "Has Toothbrush?" %>
                                   </div>
                                   <div class="span2">
                                       <%= f.input :has_toothpaste, :label => "Has Toothpaste?" %>
                                   </div>
                                   <div class="span2">
                                       <%= f.input :has_soap, :label => "Has Soap?" %>
                                   </div>
                               </div>
                               <div class="row">
                                   <div class="span4">
                                          <%= f.input :hygenall_products_distribution_date, :as => :date_picker, :label => "Date Distributed" %>
                                   </div>
                               </div>
                           </div>
                           <div class="tab-pane" id="female-hygiene">
                               <div class="row">
                                   <div class="span2">
                                       <%= f.input :has_menstruated, :label => "Has Menstruated?" %>
                                   </div>
                                   <div class="span2">
                                       <%= f.input :has_menstrual_product_access, :label => "Access to Menstrual Products Now?" %>
                                   </div>
                               </div>
                               <div class="row">
                                       <div class="span2">
                                       <%= f.input :has_received_menstrual_products, :label => "Menstrual Products Provided?" %>
                                   </div>
                                   <div class="span4">
                                       <%= f.input :menstrual_products_distribution_date, :as => :date_picker, :label => "Date of Distribution" %>
                                   </div>
                               </div>
                           </div>
                           <div class="tab-pane" id="living-conditions">
                               <h3>Sleeping Conditions</h3>
                               <div class="row">
                                   <div class="span4">
                                       <%= f.input :sleeping_location, :label => "Sleep Location", :collection => ['Bed', 'Floor'] %>
                                   </div>
                                   <div class="span2">
                                       <%= f.input :sleeps_with_mosquito_net, :label => "Sleeps w/ Mosquito Net?" %>
                                   </div>
                               </div>
                               <h3>Food</h3>
                               <div class="row">
                                   <div class="span4">
                                       <%= f.input :meals_eaten_per_day, :label => "# of Meals Per Day", :collection => 0..10 %>
                                   </div>
                                   <div class="span2">
                                       <%= f.input :has_food_available_at_home, :label => "Food Available at Home?" %>
                                   </div>
                                   <div class="span2">
                                       <%= f.input :is_food_prepared_with_charcoal, :label => "Food Prepared w/ Charcoal?" %>
                                   </div>
                               </div>
                               <h3>Home Information</h3>
                               <div class="row">
                                   <div class="span2">
                                       <%= f.input :has_windows_in_home, :label => "Windows in Home?" %>
                                   </div>
                               </div>
                           </div>
                           <div class="tab-pane" id="faith">
                               <div class="row">
                                    <div class="span2">
                                       <%= f.input :has_bible, :label => "Has Bible?" %>
                                   </div>
                                   <div class="span2">
                                       <%= f.input :is_christian, :label => "Has Accepted Jesus?" %>
                                   </div>
								</div>
								<div class="row">
                                    <div class="span2">
                                       <%= f.input :is_attending_church, :label => "Attends Church?" %>
                                   </div>
                                   <div class="span4">
                                       <%= f.input :church_location, :label => "Church Location" %>
                                   </div>
                               </div>
                           </div>
                           <div class="tab-pane" id="clothing">
                               <h3>School Uniform</h3>
                               <div class="row">
                                   <div class="span2">
                                       <%= f.input :has_school_uniform, :label => "Has School Uniform?" %>
                                   </div>
                                   <div class="span2">
                                       <%= f.input :is_school_uniform_in_good_condition, :label => "Uniform in Good Condition?" %>
                                   </div>
                                   <div class="span4">
                                       <%= f.input :state_of_school_uniform, :label => "Uniform Condition" %>
                                   </div>
                               </div>
                               <h3>Uniform Size(s)</h3>
                               <div class="row">
                                   <div class="span4">
                                       <%= f.input :dress_size, :label => "Dress Size" %>
                                   </div>
                               </div>
                               <div class="row">
                                   <div class="span4">
                                       <%= f.input :shirt_size, :label => "Shirt Size" %>
                                   </div>
                                   <div class="span4">
                                       <%= f.input :shorts_size, :label => "Shorts Size" %>
                                   </div>
                               </div>
                               <h3>Shoes</h3>
                               <div class="row">
                                   <div class="span2">
                                       <%= f.input :has_shoes, :label => "Has Shoes?" %>
                                   </div>
                                   <div class="span2">
                                       <%= f.input :is_shoes_in_good_condition, :label => "Shoes in Good Condition?" %>
                                   </div>
                                   <div class="span4">
                                       <%= f.input :shoe_size, :label => "Shoe Size" %>
                                   </div>
                               </div>
                           </div>
                           <div class="tab-pane" id="misc">
                               <div class="row">
                                   <div class="span4">
                                       <%= f.input :favorite_color, :label => "Favorite Color" %>
                                   </div>
                                   <div class="span4">
                                       <%= f.input :additional_comments, :as => :text, :label => "Additional Comments", :input_html => { :rows => 10 } %>
                                   </div>
                               </div>
                           </div>
                       </div>
                   </div>
               </div>
       </div>
  </fieldset>
</div>

<div class="tab-pane" id="physical">
  <fieldset>
       <div class="row">
               <div class="tabbable tabs-left">
<div class="span2">
                       <ul class="nav nav-pills nav-stacked">
                           <li class="active"><a href="#physical-exam-info" data-toggle="tab">Physical Exam Info</a></li>
						   <li><a href="#physical-exam-screening" data-toggle="tab">Physical Screening</a></li>
                           <li><a href="#doctor-recs" data-toggle="tab">Recommendations</a></li>
                           <li><a href="#doctor-notes" data-toggle="tab">Additional Notes</a></li>
                       </ul>
                   </div>
                   <div class="span10">
                     	<div class="tab-content">
	                      	<div class="tab-pane active" id="physical-exam-info">
						        <div class="row">
						           <div class="span4">
						                  <%= f.input :physical_examination_date, :as => :date_picker, :label => "Exam Date" %>
						           </div>
						        </div>
							</div>
                           	<div class="tab-pane" id="physical-exam-screening">
						        <div class="row">
						           <div class="span4">
						                  <%= f.input :physical_examination_temperature_in_celsius, :label => "Temperature (&deg;C)" %>
						           </div>
						       </div>
						   	</div>
    						<div class="tab-pane" id="doctor-recs">
						        <div class="row">
						           <div class="span2">
						               <%= f.input :is_antibiotics_needed, :label => "Antibiotics Needed?" %>
						           </div>
						           <div class="span2">
						               <%= f.input :is_antifungals_needed, :label => "Antifungals Needed?" %>
						           </div>
						           <div class="span2">
						               <%= f.input :is_antihistamines_needed, :label => "Antihistamines Needed?" %>
						           </div>
						           <div class="span2">
						               <%= f.input :is_vitamins_needed, :label => "Vitamins Needed?" %>
